{
    "name": "propharma.hr",
    "version": "1.0.0",
    "description": "",
    "scripts": {
        "watch:js": "parcel watch src/js/* --no-source-maps --no-cache --dist-dir dist/js/",
        "watch:sass": "node-sass --watch --output-style=compressed --no-cache --omit-source-map-url src/css --output=dist/css",
        "build:js": "parcel build src/js/* --no-source-maps --no-cache --dist-dir dist/js/",
        "build:sass": "node-sass --output-style=compressed --no-cache --omit-source-map-url src/css --output=dist/css",
        "dev": "npm-run-all --parallel watch:js watch:sass",
        "build": "npm-run-all --parallel build:js build:sass",
        "server": "http-server -c-1 -p 8081"
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "http-server": "^14.1.1",
        "keen-slider": "^6.8.6",
        "node-sass": "^9.0.0",
        "npm": "^9.7.2",
        "parcel": "^2.13.3"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5"
    }
}
